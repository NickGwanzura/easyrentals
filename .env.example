# =============================================================================
# EazyRentals Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=EazyRentals
NEXT_PUBLIC_APP_DESCRIPTION="Property Management Made Simple"

# -----------------------------------------------------------------------------
# Authentication (Demo Mode)
# -----------------------------------------------------------------------------
# Set to "true" to enable demo mode features
NEXT_PUBLIC_DEMO_MODE=true

# Demo credentials (for documentation purposes only)
# These are hardcoded in the app for demo purposes
# DEMO_ADMIN_EMAIL=demo@admin.com
# DEMO_AGENT_EMAIL=demo@agent.com
# DEMO_TENANT_EMAIL=demo@tenant.com

# -----------------------------------------------------------------------------
# Database (Supabase) - Optional for Demo Mode
# -----------------------------------------------------------------------------
# Uncomment and fill these when connecting to a real database

# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Payment Processing (Future Integration)
# -----------------------------------------------------------------------------
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# Email Service (Future Integration)
# -----------------------------------------------------------------------------
# RESEND_API_KEY=re_...
# EMAIL_FROM=noreply@eazyrentals.com

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_REQUESTS=true
NEXT_PUBLIC_ENABLE_PAYMENT_TRACKING=true
